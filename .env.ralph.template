# Ralf Loop Configuration - Copy this to .env and fill in your values

# GitHub Integration
GITHUB_TOKEN=ghp_your_token_here
GITHUB_REPO_OWNER=your-username
GITHUB_REPO_NAME=social-chef-native

# Linear Integration (Optional - for creating and syncing stories)
# Get API key from: Linear Settings → API → Personal API Keys
LINEAR_API_KEY=lin_api_your_key_here
# Get team ID by running: curl -X POST https://api.linear.app/graphql -H "Authorization: ${LINEAR_API_KEY}" -H "Content-Type: application/json" -d '{"query":"{ teams { nodes { id name } } }"}' | jq
LINEAR_TEAM_ID=your-team-id

# Anthropic API (Required for Ralf Loop)
ANTHROPIC_API_KEY=sk-ant-your_key_here

# Application Environment Variables (for the native app)
VITE_API_URL=https://api.social-chef.app
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
